<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PoQuizowane" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/seed</item>
        <item name="android:navigationBarColor">@color/seed</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/seed</item>
    </style>

    <style name="Theme.PoQuizowane.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@color/seed</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.PoQuizowane</item>
    </style>

</resources>